{
  "name": "sheeva",
  "version": "0.1.0",
  "description": "Concurrent Automation Test Runner",
  "author": {
    "name": "Vitaliy Potapov",
    "email": "noginsk@rambler.ru"
  },
  "main": "src/index.js",
  "bin": "src/cli.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/vitalets/sheeva.git"
  },
  "scripts": {
    "tt": "node src-stable/cli --config test/sheeva.config.js",
    "test": "npm run tt -- --env=tests-sync --break-on-error",
    "norep": "npm t -- --reporters=",
    "debug": "npm t -- --reporters=./test/debug-reporter.js",
    "devtool": "devtool src/cli --config test/sheeva.config.js --env=tests-sync",
    "precommit": "npm run tt -- --no-only",
    "prepush": "npm run tt -- --no-only && npm run copy-stable",
    "copy-stable": "cp -R src/ src-stable/"
  },
  "dependencies": {
    "commander": "^2.9.0",
    "glob": "^7.1.1",
    "promise.prototype.finally": "^2.0.1"
  },
  "devDependencies": {
    "escape-string-regexp": "^1.0.5",
    "eslint": "^3.15.0",
    "husky": "^0.13.1",
    "mocha": "^3.1.2",
    "treeify": "^1.0.1",
    "unexpected": "^10.25.0"
  },
  "license": "MIT"
}
