{
  "name": "sheeva",
  "version": "0.1.0",
  "description": "Concurrent Automation Test Runner",
  "author": {
    "name": "Vitaliy Potapov",
    "email": "noginsk@rambler.ru"
  },
  "main": "src/index.js",
  "bin": "src/cli.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/vitalets/sheeva.git"
  },
  "scripts": {
    "code": "npm run lint-all && npm run circular",
    "lint-all": "eslint src test",
    "lint-staged": "lint-staged",
    "spellcheck": "eslint src -c .eslintrc-spellcheck --no-eslintrc",
    "circular": "madge --circular --warning src",
    "tt": "node src-stable/cli --config=test/sheeva.config.js",
    "ttdev": "node src/cli --config=test/sheeva.config.js",
    "test": "npm run tt -- --env=sync-env --break-on-error --timeout=0",
    "testdev": "npm run tt -- --env=sync-env --break-on-error --timeout=0",
    "testappend": "SHEEVA_APPEND=true npm run tt",
    "norep": "npm t -- --reporters=",
    "ci": "npm run code && npm run ttdev",
    "debug": "npm t -- --reporters=./test/debug-reporter.js",
    "devtool": "devtool src-stable/cli -- --config=test/sheeva.config.js --env=sync-env --reporters=./test/debug-reporter.js --timeout=0",
    "precommit": "npm run lint-staged && npm run circular && npm run tt -- --no-only",
    "prepush": "npm run code && npm run tt -- --no-only && npm run copy",
    "copy": "cp -R src/ src-stable/"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "dependencies": {
    "commander": "^2.9.0",
    "glob": "^7.1.1",
    "promise.prototype.finally": "^2.0.1"
  },
  "devDependencies": {
    "escape-string-regexp": "^1.0.5",
    "eslint": "^3.16.1",
    "eslint-plugin-spellcheck": "0.0.8",
    "husky": "^0.13.1",
    "lint-staged": "^3.3.1",
    "madge": "^1.6.0",
    "sheeva-reporter-console": "^0.1.2",
    "treeify": "^1.0.1",
    "unexpected": "^10.26.1"
  },
  "license": "MIT"
}
